
$keyframe-name = movimiento_inicial
@keyframes {$keyframe-name}
    0%
        opacity: 0
        transform: translateY(-150px)

    50%
        opacity: 0
        transform: translateY(-150px)
    
    100%
        opacity: 1

$keyframe-name = movimiento_circulo
@keyframes {$keyframe-name}
    0%
        opacity: 0
    70%
        opacity: 0

    100%
        opacity: 1

$keyframe-name = boton_crecimiento
@keyframes {$keyframe-name}
    0%
        opacity: 1

    100%
        height: 100px
        width: 100px
        opacity: 1



.Title_h1,.Title_p,.Title_h2,.Circle_button
    position: relative
    text-align: center
    text-transform: uppercase
    font-weight: bolder
    color: white
    top: 100px
    


.Title_h1
    margin-bottom: 20px
    font-size: 50px
    color: white
    -webkit-animation-duration: 1s
    -webkit-animation-fill-mode: both
    -webkit-animation-name: movimiento_inicial 

.Title_p
   
    font-size: 20px
    font-weight: lighter
    position:relative
    margin-left: 25% 
    margin-right: 25% 
    -webkit-animation-duration: 2s
    -webkit-animation-fill-mode: both
    -webkit-animation-name: movimiento_inicial 
    top: 30px;

.Title_h2
    margin-top: 80px
    margin-bottom: 20px
 
    color: #ffa500
    -webkit-animation-duration: 3s
    -webkit-animation-fill-mode: both
    -webkit-animation-name: movimiento_inicial 
    bottom: 40px
 
.Circle_button
    position: relative
    height: 75px
    width: 75px
    background: #ffa500
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    top: 130px
    border-radius: 50%
    -webkit-animation-duration: 5s
    -webkit-animation-fill-mode: none 
    -webkit-animation-name: movimiento_circulo

    cursor: pointer

 


.arrow
    height: 50%
    width: 50%
    color: white
    position: relative
    top: 30%
    transform: rotate(90deg)

