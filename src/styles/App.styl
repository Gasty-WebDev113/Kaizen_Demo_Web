
*
    margin: 0px


body
    background: #c3c3c3


.Navigation
    height: 100px
    width: 100% 

.Logo
    position: relative
    height: 75px
    width: 75px
    margin: 10px 



.Header
    height: 150px
    width: 100%
    background: linear-gradient(black,white)
    margin: 0px
    text-align: center
    color: blue
    font-weight: bolder
    position: relative
   



.container
    background: white
    height: 100%


.Menu
    position: relative
    display: inline-block
    font-size: 25px
    font-weight: lighter
    height: 100px
    width: 200px
    margin: 0px 10px 0px 10px
    bottom: 65px
    left: 25%
    text-decoration: none
    color: white
    text-align: center
    align-items: center
  


.Menu:hover
    box-shadow:  0px 5px 5px rgba(0,0,0,0.3) 
    -webkit-animation-duration: 0.5s
    -webkit-animation-fill-mode: both
    -webkit-animation-name: pulse
    transform: translateY(-7px)
    transition-duration: 0.35s
    background: #ffa500 
    cursor: pointer

.Menu:hover > a
    color: white

.Menu_Name
    height: 100%
    width: 100%
    top: 25%
    position: relative
    color: black
    text-decoration: none
   
