.sobremi_container
    width: 100%
    height 600px
    text-align: center
    background: white
    padding-bottom: 100px 
    padding-top: 100px 

.title-little
    text-align: center
    font-weight: lighter
    font-size: 55px
    padding-top: 15px

.text-little
    font-size: 25px
    line-height: 40px
    padding: 3% 10%

.subtitle-little
    position: relative
    top: 40px 
    
.Programing-logo-container
    height: 120px
    width: 150px
    transform: translateY(100px)
    position: relative
    margin: 20px
    display: inline-block
  


.Programing-logo
    position: absolute
    height: 100px
    width: 100px  
    display: inline-block
    filter: grayscale(100%) 
    transform: translate(-50%, -50%);
    left: 50%
    top: 50%
    

.Programing-logo:hover , .Programing-logo-container
    filter: grayscale(0%) 
    animation: big 0.3s linear
    animation-fill-mode: forwards


@keyframes big {
    0%{
    height: 100px
    width: 100px  
        }

    100%{
    height: 120px
    width: 120px  
        }
}