.Layout
    position: fixed
    z-index: 1 

    width: 100%
    background: none
    


.Navigation

    width: 100% 

.Logo
    position: relative
    height: 50px
    width: 50px
    margin: 10px 
    top: -2px
    animation: rotate 5s infinite
    animation-timing-function: linear

.Logo2
    position: relative
    height: 50px
    width: 50px
    margin: 10px 
    top: -2px
    left: -70px

.Menu_Layout
    background: none
    width: 100%
    height: 60px
    display: block

    

.Menu_Layout_White
    background: white
    width: 100%
    height: 60px
    animation: changebackground 1s 1
    box-shadow: 1px 1px 1px #778BD9
 

.Menu_Layout_White < span
    color: red

.Menu
    position: relative
    display: inline-block
    font-size: 25px
    font-weight: lighter
    height: 70px
    width: 200px
    margin: 0px 10px 0px 10px
    left: 20%
    color: white
    text-align: center
    top: -50px
    background: none


.Menu:hover
    box-shadow:  0px 5px 5px rgba(0,0,0,0.3) 
    -webkit-animation-duration: 0.5s
    -webkit-animation-fill-mode: both
    -webkit-animation-name: pulse
    transform: translateY(-7px)
    transition-duration: 0.35s
    background: #778BD9 
    cursor: pointer
    

.Menu:hover > a
    color: white

.Menu_Lettes
    height: 100%
    width: 100%
    top: 20px
    position: relative
    color: black



.Menu_Lettes_White
    height: 100%
    width: 100%
    top: 20px
    position: relative
    color: white
    text-decoration: none 
    animation: changecolor 1s 1




@keyframes rotate {

    0%{
        transform: rotateZ(s0deg)
        } 

    100%{
        transform: rotateZ(360deg)
        }
}


@keyframes changecolor {

    0%{
        color: black
        } 

    100%{
        color: white
        }
}

@keyframes changebackground {

    0%{
        background: none
        } 

    100%{
        background: white
        }
}